<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span><%= lang.common.welcome %>, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.sales.newSale %></h3>
                    <a href="/sales" class="btn btn-secondary"><%= lang.common.backToList %></a>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>

                <form action="/sales" method="POST" id="salesForm" data-validate-form>
                    <h4><%= lang.sales.customerInfo %></h4>
                    <div class="form-group">
                        <label for="customer_search" class="form-label"><%= lang.sales.searchExisting %></label>
                        <select id="customer_search" class="form-control" style="width: 100%;">
                            <option value=""><%= lang.sales.searchExisting %></option>
                        </select>
                        <small><%= lang.sales.searchExisting %></small>
                    </div>

                    <div class="form-group">
                        <label for="customer_phone" class="form-label required"><%= lang.sales.customerPhone %></label>
                        <input type="tel" id="customer_phone" name="customer_phone" class="form-control" data-validate="required|phone" required placeholder="+998901234567">
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="customer_name" class="form-label required"><%= lang.sales.customerName %></label>
                        <input type="text" id="customer_name" name="customer_name" class="form-control" data-validate="required" required>
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="customer_address" class="form-label"><%= lang.sales.customerAddress %></label>
                        <textarea id="customer_address" name="customer_address" class="form-control" rows="2"></textarea>
                    </div>

                    <hr>

                    <h4><%= lang.sales.saleDetails %></h4>
                    <div class="form-group">
                        <label for="seller_id" class="form-label required"><%= lang.sales.seller %></label>
                        <select id="seller_id" name="seller_id" class="form-control" data-validate="required" required>
                            <option value=""><%= lang.sales.selectSeller %></option>
                            <% sellers.forEach(seller => { %>
                                <option value="<%= seller.id %>"><%= seller.full_name %></option>
                            <% }) %>
                        </select>
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label"><%= lang.sales.products %></label>
                        <div id="productsList">
                            <div class="product-item" style="display: flex; gap: 10px; margin-bottom: 10px; align-items: flex-start;">
                                <select class="form-control product-select" style="flex: 2;" disabled>
                                    <option value=""><%= lang.sales.selectSellerFirst %></option>
                                </select>
                                <input type="number" class="form-control quantity-input" placeholder="<%= lang.sales.qty %>" min="1" style="flex: 0.5;" disabled>
                                <input type="number" step="0.01" class="form-control price-input" placeholder="<%= lang.sales.price %>" min="0" style="flex: 1;" disabled>
                                <span class="form-control" style="flex: 1; background: #f1f5f9;">$0.00</span>
                            </div>
                        </div>
                        <button type="button" class="btn btn-sm btn-secondary" id="addProductBtn" disabled><%= lang.stockIntake.addProduct %></button>
                    </div>

                    <div style="text-align: right; font-size: 18px; font-weight: bold; margin: 20px 0;">
                        <%= lang.common.total %>: $<span id="totalAmount">0.00</span>
                    </div>

                    <hr>

                    <h4><%= lang.sales.payment %></h4>
                    <div class="form-group">
                        <label for="initial_payment" class="form-label"><%= lang.sales.initialPayment %></label>
                        <input type="number" step="0.01" id="initial_payment" name="initial_payment" class="form-control" min="0" value="0">
                    </div>

                    <div class="form-group">
                        <label for="payment_method" class="form-label"><%= lang.sales.paymentMethod %></label>
                        <select id="payment_method" name="payment_method" class="form-control">
                            <option value="cash"><%= lang.sales.cash %></option>
                            <option value="card"><%= lang.sales.card %></option>
                            <option value="transfer"><%= lang.sales.transfer %></option>
                            <option value="other"><%= lang.sales.other %></option>
                        </select>
                    </div>

                    <div id="debtSection" style="display: none;">
                        <hr>
                        <h4><%= lang.sales.debtConfig %></h4>
                        <div class="form-group">
                            <label for="debt_markup_type" class="form-label"><%= lang.sales.markupType %></label>
                            <select id="debt_markup_type" name="debt_markup_type" class="form-control">
                                <option value="fixed"><%= lang.sales.fixedAmount %></option>
                                <option value="percent"><%= lang.sales.percentInterest %></option>
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="debt_markup_value" class="form-label"><%= lang.sales.markupValue %></label>
                            <input type="number" step="0.01" id="debt_markup_value" name="debt_markup_value" class="form-control" min="0" placeholder="<%= lang.sales.markupValue %>">
                        </div>

                        <div class="form-group">
                            <label for="debt_grace_months" class="form-label"><%= lang.sales.gracePeriod %></label>
                            <input type="number" id="debt_grace_months" name="debt_grace_months" class="form-control" min="0" value="0">
                        </div>
                    </div>

                    <input type="hidden" name="items" id="itemsData">

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary"><%= lang.sales.completeSale %></button>
                        <a href="/sales" class="btn btn-secondary"><%= lang.buttons.cancel %></a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>

<script src="/js/sales-form.js"></script>

<script>
$(document).ready(function() {
    // Initialize Select2 for customer search
    $('#customer_search').select2({
        ajax: {
            url: '/customers/api/search',
            dataType: 'json',
            delay: 250,
            data: function (params) {
                return {
                    q: params.term
                };
            },
            processResults: function (data) {
                return {
                    results: data.map(function(customer) {
                        return {
                            id: customer.id,
                            text: customer.full_name + ' (' + customer.phone + ')',
                            customer: customer
                        };
                    })
                };
            },
            cache: true
        },
        placeholder: '<%= lang.sales.searchExisting %>',
        minimumInputLength: 2,
        allowClear: true
    });

    // When customer is selected from search, populate the form
    $('#customer_search').on('select2:select', function (e) {
        var customer = e.params.data.customer;
        $('#customer_phone').val(customer.phone);
        $('#customer_name').val(customer.full_name);
        $('#customer_address').val(customer.address || '');
    });

    // Initialize Select2 for seller
    $('#seller_id').select2({
        ajax: {
            url: '/sellers/api/search',
            dataType: 'json',
            delay: 250,
            data: function (params) {
                return {
                    q: params.term || ''
                };
            },
            processResults: function (data) {
                return {
                    results: data.map(function(seller) {
                        return {
                            id: seller.id,
                            text: seller.full_name
                        };
                    })
                };
            },
            cache: true
        },
        placeholder: '<%= lang.sales.selectSeller %>',
        minimumInputLength: 0,
        allowClear: true
    });

    // Handle seller selection - load inventory directly
    $('#seller_id').on('select2:select', async function (e) {
        const sellerId = e.params.data.id;

        if (!sellerId) {
            window.sellerInventory = [];
            if (typeof window.updateProductSelects === 'function') {
                window.updateProductSelects();
            }
            return;
        }

        try {
            const response = await fetch(`/sales/api/seller/${sellerId}/inventory`);
            if (response.ok) {
                window.sellerInventory = await response.json();
                if (typeof window.updateProductSelects === 'function') {
                    window.updateProductSelects();
                }
                document.getElementById('addProductBtn').disabled = false;
            }
        } catch (error) {
            alert('Failed to load seller inventory');
        }
    });

    // Also handle when cleared
    $('#seller_id').on('select2:clear', function (e) {
        window.sellerInventory = [];
        if (typeof window.updateProductSelects === 'function') {
            window.updateProductSelects();
        }
        document.getElementById('addProductBtn').disabled = true;
    });

    // Note: Product selects are NOT using Select2 on this page
    // They are managed by sales-form.js based on seller inventory
});
</script>
