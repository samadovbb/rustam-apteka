<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span><%= lang.common.welcome %>, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.sales.allSales %></h3>
                    <a href="/sales/create" class="btn btn-primary"><%= lang.sales.newSale %></a>
                </div>

                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th><%= lang.table.id %></th>
                                <th><%= lang.table.date %></th>
                                <th><%= lang.table.customer %></th>
                                <th><%= lang.table.seller %></th>
                                <th><%= lang.table.total %></th>
                                <th><%= lang.table.paid %></th>
                                <th><%= lang.table.remaining %></th>
                                <th><%= lang.table.status %></th>
                                <th><%= lang.table.actions %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (sales.length === 0) { %>
                                <tr>
                                    <td colspan="9" class="text-center"><%= lang.sales.notFound %></td>
                                </tr>
                            <% } else { %>
                                <% sales.forEach(sale => { %>
                                    <tr>
                                        <td>#<%= sale.id %></td>
                                        <td><%= new Date(sale.sale_date).toLocaleDateString() %></td>
                                        <td><%= sale.customer_name %></td>
                                        <td><%= sale.seller_name %></td>
                                        <td>$<%= parseFloat(sale.total_amount || 0).toFixed(2) %></td>
                                        <td>$<%= parseFloat(sale.paid_amount || 0).toFixed(2) %></td>
                                        <td>$<%= parseFloat(sale.remaining_amount || 0).toFixed(2) %></td>
                                        <td>
                                            <% if (sale.status === 'paid') { %>
                                                <span class="badge badge-success"><%= lang.status.paid %></span>
                                            <% } else if (sale.status === 'partial') { %>
                                                <span class="badge badge-warning"><%= lang.status.partial %></span>
                                            <% } else { %>
                                                <span class="badge badge-danger"><%= lang.status.unpaid %></span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/sales/<%= sale.id %>" class="btn btn-sm btn-primary"><%= lang.buttons.view %></a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
