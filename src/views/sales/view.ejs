<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span>Welcome, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Sale Details</h3>
                    <a href="/sales" class="btn btn-secondary">Back to List</a>
                </div>

                <div style="margin-bottom: 20px;">
                    <h4>Sale Information</h4>
                    <p><strong>ID:</strong> #<%= sale.id %></p>
                    <p><strong>Date:</strong> <%= new Date(sale.sale_date).toLocaleDateString() %></p>
                    <p><strong>Customer:</strong> <%= sale.customer_name %> (<%= sale.customer_phone %>)</p>
                    <p><strong>Seller:</strong> <%= sale.seller_name %></p>
                    <p><strong>Status:</strong>
                        <% if (sale.status === 'paid') { %>
                            <span class="badge badge-success">Paid</span>
                        <% } else if (sale.status === 'partial') { %>
                            <span class="badge badge-warning">Partial</span>
                        <% } else { %>
                            <span class="badge badge-danger">Unpaid</span>
                        <% } %>
                    </p>
                </div>

                <h4>Products</h4>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Barcode</th>
                                <th>Quantity</th>
                                <th>Unit Price</th>
                                <th>Subtotal</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% items.forEach(item => { %>
                                <tr>
                                    <td><%= item.product_name %></td>
                                    <td><%= item.barcode %></td>
                                    <td><%= item.quantity %></td>
                                    <td>$<%= parseFloat(item.unit_price || 0).toFixed(2) %></td>
                                    <td>$<%= parseFloat(item.subtotal || 0).toFixed(2) %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>

                <div style="text-align: right; margin: 20px 0;">
                    <h4>Total Amount: $<%= parseFloat(sale.total_amount || 0).toFixed(2) %></h4>
                    <p><strong>Paid:</strong> $<%= parseFloat(sale.paid_amount || 0).toFixed(2) %></p>
                    <p style="color: <%= sale.remaining_amount > 0 ? 'red' : 'green' %>;">
                        <strong>Remaining:</strong> $<%= parseFloat(sale.remaining_amount || 0).toFixed(2) %>
                    </p>
                </div>

                <% if (payments.length > 0) { %>
                    <h4>Payment History</h4>
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Method</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% payments.forEach(payment => { %>
                                    <tr>
                                        <td><%= new Date(payment.payment_date).toLocaleDateString() %></td>
                                        <td>$<%= parseFloat(payment.amount || 0).toFixed(2) %></td>
                                        <td><%= payment.payment_method %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>

                <% if (sale.remaining_amount > 0) { %>
                    <div class="card" style="margin-top: 20px; background: #fff3cd;">
                        <h4>Add Payment</h4>
                        <form action="/sales/<%= sale.id %>/payment" method="POST" style="display: flex; gap: 10px; align-items: flex-end;">
                            <div class="form-group" style="flex: 1; margin: 0;">
                                <label for="amount" class="form-label">Amount</label>
                                <input type="number" step="0.01" id="amount" name="amount" class="form-control" max="<%= sale.remaining_amount %>" required>
                            </div>
                            <div class="form-group" style="flex: 1; margin: 0;">
                                <label for="payment_method" class="form-label">Method</label>
                                <select id="payment_method" name="payment_method" class="form-control">
                                    <option value="cash">Cash</option>
                                    <option value="card">Card</option>
                                    <option value="transfer">Transfer</option>
                                    <option value="other">Other</option>
                                </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Payment</button>
                        </form>
                    </div>
                <% } %>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
