<%- include('partials/header') %>

<div class="login-container">
    <div class="login-box">
        <div class="login-header">
            <h1>MegaDent POS</h1>
            <p><%= lang.auth.systemTitle %></p>
        </div>

        <% if (error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <form action="/login" method="POST" data-validate-form>
            <div class="form-group">
                <label for="login" class="form-label required"><%= lang.auth.loginLabel %></label>
                <input
                    type="text"
                    id="login"
                    name="login"
                    class="form-control"
                    data-validate="required"
                    autocomplete="username"
                    autofocus
                >
                <span class="form-error"></span>
            </div>

            <div class="form-group">
                <label for="password" class="form-label required"><%= lang.auth.password %></label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    class="form-control"
                    data-validate="required"
                    autocomplete="current-password"
                >
                <span class="form-error"></span>
            </div>

            <button type="submit" class="btn btn-primary" style="width: 100%;">
                <%= lang.auth.login %>
            </button>
        </form>

        <p class="text-center" style="margin-top: 20px; color: #64748b; font-size: 12px;">
            <%= lang.auth.defaultCredentials %>
        </p>
    </div>
</div>

<%- include('partials/footer') %>
