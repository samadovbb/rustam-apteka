<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span><%= lang.common.welcome %>, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.stockTransfer.transferDetails %></h3>
                    <a href="/stock-transfer" class="btn btn-secondary"><%= lang.common.backToList %></a>
                </div>

                <div style="margin-bottom: 20px;">
                    <p><strong><%= lang.table.id %>:</strong> #<%= transfer.id %></p>
                    <p><strong><%= lang.stockTransfer.seller %>:</strong> <%= transfer.seller_name %></p>
                    <p><strong><%= lang.common.date %>:</strong> <%= new Date(transfer.transfer_date).toLocaleDateString() %></p>
                    <% if (transfer.notes) { %>
                        <p><strong><%= lang.common.notes %>:</strong> <%= transfer.notes %></p>
                    <% } %>
                </div>

                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th><%= lang.table.product %></th>
                                <th><%= lang.table.barcode %></th>
                                <th><%= lang.table.quantity %></th>
                                <th><%= lang.table.sellerPrice %></th>
                                <th><%= lang.table.totalValue %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% items.forEach(item => { %>
                                <tr>
                                    <td><%= item.product_name %></td>
                                    <td><%= item.barcode %></td>
                                    <td><%= item.quantity %></td>
                                    <td>$<%= parseFloat(item.seller_price || 0).toFixed(2) %></td>
                                    <td>$<%= (parseFloat(item.seller_price || 0) * parseInt(item.quantity || 0)).toFixed(2) %></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
