<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span><%= lang.common.welcome %>, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.sellers.allSellers %></h3>
                    <a href="/sellers/create" class="btn btn-primary"><%= lang.sellers.addNew %></a>
                </div>

                <div style="padding: 15px;">
                    <input type="text" id="sellersSearch" placeholder="Qidirish..." style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 14px;">
                </div>

                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th><%= lang.table.id %></th>
                                <th><%= lang.table.name %></th>
                                <th><%= lang.table.phone %></th>
                                <th><%= lang.table.commission %></th>
                                <th><%= lang.table.actions %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (sellers.length === 0) { %>
                                <tr>
                                    <td colspan="5" class="text-center"><%= lang.sellers.notFound %></td>
                                </tr>
                            <% } else { %>
                                <% sellers.forEach(seller => { %>
                                    <tr>
                                        <td>#<%= seller.id %></td>
                                        <td><%= seller.full_name %></td>
                                        <td><%= seller.phone || '-' %></td>
                                        <td><%= parseFloat(seller.commission_percent || 0).toFixed(2) %>%</td>
                                        <td>
                                            <a href="/sellers/<%= seller.id %>/view" class="btn btn-sm btn-info"><%= lang.buttons.view || 'View' %></a>
                                            <a href="/sellers/<%= seller.id %>/inventory" class="btn btn-sm btn-success"><%= lang.sellers.inventory %></a>
                                            <a href="/sellers/<%= seller.id %>/edit" class="btn btn-sm btn-secondary"><%= lang.buttons.edit %></a>
                                            <form action="/sellers/<%= seller.id %>/delete" method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('<%= lang.products.deleteConfirm %>')"><%= lang.buttons.delete %></button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
document.getElementById('sellersSearch').addEventListener('keyup', function() {
    const searchValue = this.value.toLowerCase();
    const tableRows = document.querySelectorAll('.table-responsive tbody tr');

    tableRows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchValue) ? '' : 'none';
    });
});
</script>

<%- include('../partials/footer') %>
