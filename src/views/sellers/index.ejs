<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span>Welcome, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">All Sellers</h3>
                    <a href="/sellers/create" class="btn btn-primary">Add New Seller</a>
                </div>

                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Phone</th>
                                <th>Commission %</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (sellers.length === 0) { %>
                                <tr>
                                    <td colspan="5" class="text-center">No sellers found</td>
                                </tr>
                            <% } else { %>
                                <% sellers.forEach(seller => { %>
                                    <tr>
                                        <td>#<%= seller.id %></td>
                                        <td><%= seller.full_name %></td>
                                        <td><%= seller.phone || '-' %></td>
                                        <td><%= parseFloat(seller.commission_percent || 0).toFixed(2) %>%</td>
                                        <td>
                                            <a href="/sellers/<%= seller.id %>/inventory" class="btn btn-sm btn-info">Inventory</a>
                                            <a href="/sellers/<%= seller.id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
                                            <form action="/sellers/<%= seller.id %>/delete" method="POST" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
