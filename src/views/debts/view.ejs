<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span><%= lang.common.welcome %>, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.debts.debtDetails %></h3>
                    <div>
                        <a href="/debts/<%= debt.id %>/export" class="btn btn-success" style="margin-right: 10px; background-color: #28a745;">
                            üìä Excel ga eksport qilish
                        </a>
                        <a href="/debts" class="btn btn-secondary"><%= lang.common.backToList %></a>
                    </div>
                </div>

                <div style="margin-bottom: 20px;">
                    <h4><%= lang.debts.debtInfo %></h4>
                    <p><strong><%= lang.table.id %>:</strong> #<%= debt.id %></p>
                    <p><strong><%= lang.debts.customer %>:</strong> <%= debt.customer_name %> (<%= debt.customer_phone %>)</p>
                    <p><strong><%= lang.debts.sale %>:</strong> <a href="/sales/<%= debt.sale_id %>" class="btn btn-sm btn-primary">Savdoni ko'rish #<%= debt.sale_id %></a></p>
                    <p><strong><%= lang.debts.saleDate %>:</strong> <%= new Date(debt.sale_date).toLocaleDateString('ru-RU') %></p>
                    <p><strong><%= lang.debts.originalAmount %>:</strong> $<%= parseFloat(debt.original_amount || 0).toFixed(2) %></p>
                    <p><strong>Joriy qarz (asosiy):</strong> $<%= parseFloat(debtCalculation.baseAmount || 0).toFixed(2) %></p>

                    <% if (debtCalculation.monthsOverdue > 0) { %>
                        <p style="background: #fff3cd; padding: 10px; border-radius: 5px; margin: 10px 0;">
                            <strong>Imtiyoz muddati tugagan:</strong> <%= debtCalculation.monthsOverdue %> oy oldin<br>
                            <strong>Ustama (hisoblangan):</strong>
                            <% if (debt.markup_type === 'fixed') { %>
                                $<%= parseFloat(debt.markup_value || 0).toFixed(2) %> √ó <%= debtCalculation.monthsOverdue %> oy =
                            <% } else { %>
                                <%= parseFloat(debt.markup_value || 0).toFixed(2) %>% √ó <%= debtCalculation.monthsOverdue %> oy =
                            <% } %>
                            <span style="color: orange; font-weight: bold;">$<%= parseFloat(debtCalculation.markupAmount || 0).toFixed(2) %></span><br>
                            <strong>Jami qarz (ustama bilan):</strong>
                            <span style="color: red; font-size: 1.3em; font-weight: bold;">$<%= parseFloat(debtCalculation.totalWithMarkup || 0).toFixed(2) %></span>
                        </p>
                    <% } else { %>
                        <p><strong>Jami qarz:</strong> <span style="color: red; font-size: 1.2em;">$<%= parseFloat(debtCalculation.baseAmount || 0).toFixed(2) %></span></p>
                    <% } %>

                    <p><strong><%= lang.debts.markupType %>:</strong>
                        <% if (debt.markup_type === 'fixed') { %>
                            <%= lang.debts.fixed %>: $<%= parseFloat(debt.markup_value || 0).toFixed(2) %> <%= lang.debts.monthly %>
                        <% } else { %>
                            <%= parseFloat(debt.markup_value || 0).toFixed(2) %>% <%= lang.debts.monthly %>
                        <% } %>
                    </p>
                    <p>
                        <strong><%= lang.sales.gracePeriod %>:</strong>
                        <span id="grace-period-display"><%= debt.grace_period_months %> <%= lang.debts.monthly %></span>
                        (<%= lang.debts.graceEnd %> <span id="grace-end-display"><%= new Date(debt.grace_end_date).toLocaleDateString('ru-RU') %></span>)
                        <% if (debt.status === 'active') { %>
                            <button onclick="changeGracePeriod(<%= debt.id %>, <%= debt.grace_period_months %>)" class="btn btn-sm btn-link" title="Imtiyoz davrini o'zgartirish" style="padding: 0 5px; font-size: 0.9em;">
                                ‚úèÔ∏è
                            </button>
                        <% } %>
                    </p>
                    <p><strong><%= lang.debts.lastMarkupDate %>:</strong> <%= debt.last_markup_date ? new Date(debt.last_markup_date).toLocaleDateString('ru-RU') : lang.debts.never %></p>
                    <p><strong><%= lang.common.status %>:</strong>
                        <% if (debt.status === 'active') { %>
                            <span class="badge badge-danger"><%= lang.status.active %></span>
                        <% } else if (debt.status === 'paid') { %>
                            <span class="badge badge-success"><%= lang.status.paid %></span>
                        <% } else { %>
                            <span class="badge badge-secondary"><%= lang.status.cancelled %></span>
                        <% } %>
                    </p>
                </div>

                <% if (paymentHistory.length > 0) { %>
                    <h4>Qarz bo'yicha to'lovlar tarixi (qarzni kamaytiradi)</h4>
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th><%= lang.common.date %></th>
                                    <th><%= lang.sales.amount %></th>
                                    <th><%= lang.sales.method %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% paymentHistory.forEach(payment => { %>
                                    <tr>
                                        <td><%= new Date(payment.payment_date).toLocaleDateString('ru-RU') %></td>
                                        <td style="color: green; font-weight: bold;">-$<%= parseFloat(payment.amount || 0).toFixed(2) %></td>
                                        <td><%= payment.payment_method %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>

                <% if (markupLogs.length > 0) { %>
                    <h4>Ustama tarixi (qarzni oshiradi)</h4>
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th><%= lang.common.date %></th>
                                    <th><%= lang.debts.debtBefore %></th>
                                    <th><%= lang.debts.markupApplied %></th>
                                    <th><%= lang.debts.debtAfter %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% markupLogs.forEach(log => { %>
                                    <tr>
                                        <td><%= new Date(log.calculation_date).toLocaleDateString('ru-RU') %></td>
                                        <td>$<%= parseFloat(log.remaining_debt || 0).toFixed(2) %></td>
                                        <td style="color: orange; font-weight: bold;">
                                            <% if (debt.markup_type === 'fixed') { %>
                                                +$<%= parseFloat(log.markup_value || 0).toFixed(2) %>
                                            <% } else { %>
                                                <%= parseFloat(log.markup_percent || 0).toFixed(2) %>% = +$<%= parseFloat(log.markup_value || 0).toFixed(2) %>
                                            <% } %>
                                        </td>
                                        <td>$<%= parseFloat(log.total_after_markup || 0).toFixed(2) %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>

                <% if (debt.status === 'active') { %>
                    <div style="margin-top: 20px;">
                        <form action="/debts/<%= debt.id %>/apply-markup" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-warning" onclick="return confirm('<%= lang.debts.confirmApplyMarkup %>')">
                                <%= lang.debts.applyMarkupManually %>
                            </button>
                        </form>

                        <form action="/debts/<%= debt.id %>/status" method="POST" style="display: inline;">
                            <input type="hidden" name="status" value="cancelled">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('<%= lang.debts.confirmCancel %>')">
                                <%= lang.debts.cancelDebt %>
                            </button>
                        </form>
                    </div>
                <% } %>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>

<script>
async function changeGracePeriod(debtId, currentGracePeriod) {
    const { value: newGracePeriod } = await Swal.fire({
        title: 'Imtiyoz davrini o\'zgartirish',
        input: 'number',
        inputLabel: 'Yangi imtiyoz davri (oylar)',
        inputValue: currentGracePeriod,
        inputAttributes: {
            min: 0,
            step: 1
        },
        showCancelButton: true,
        confirmButtonText: 'O\'zgartirish',
        cancelButtonText: 'Bekor qilish',
        inputValidator: (value) => {
            if (!value || value < 0) {
                return 'Iltimos, to\'g\'ri qiymat kiriting!'
            }
        }
    });

    if (newGracePeriod && newGracePeriod !== String(currentGracePeriod)) {
        try {
            const response = await fetch(`/debts/${debtId}/grace-period`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ grace_period_months: parseInt(newGracePeriod) })
            });

            const data = await response.json();

            if (data.success) {
                Swal.fire('Yangilandi!', data.message, 'success')
                    .then(() => window.location.reload());
            } else {
                Swal.fire('Xato!', data.error, 'error');
            }
        } catch (error) {
            console.error('Error:', error);
            Swal.fire('Xato!', 'Imtiyoz davrini o\'zgartirishda xatolik yuz berdi', 'error');
        }
    }
}
</script>
