<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span>Welcome, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Debt Details</h3>
                    <a href="/debts" class="btn btn-secondary">Back to List</a>
                </div>

                <div style="margin-bottom: 20px;">
                    <h4>Debt Information</h4>
                    <p><strong>ID:</strong> #<%= debt.id %></p>
                    <p><strong>Customer:</strong> <%= debt.customer_name %> (<%= debt.customer_phone %>)</p>
                    <p><strong>Sale Date:</strong> <%= new Date(debt.sale_date).toLocaleDateString() %></p>
                    <p><strong>Original Amount:</strong> $<%= parseFloat(debt.original_amount || 0).toFixed(2) %></p>
                    <p><strong>Current Amount:</strong> <span style="color: red; font-size: 1.2em;">$<%= parseFloat(debt.current_amount || 0).toFixed(2) %></span></p>
                    <p><strong>Markup Type:</strong>
                        <% if (debt.markup_type === 'fixed') { %>
                            Fixed Amount: $<%= parseFloat(debt.markup_value || 0).toFixed(2) %> monthly
                        <% } else { %>
                            <%= parseFloat(debt.markup_value || 0).toFixed(2) %>% monthly interest
                        <% } %>
                    </p>
                    <p><strong>Grace Period:</strong> <%= debt.grace_period_months %> months (ends <%= new Date(debt.grace_end_date).toLocaleDateString() %>)</p>
                    <p><strong>Last Markup Date:</strong> <%= debt.last_markup_date ? new Date(debt.last_markup_date).toLocaleDateString() : 'Never' %></p>
                    <p><strong>Status:</strong>
                        <% if (debt.status === 'active') { %>
                            <span class="badge badge-danger">Active</span>
                        <% } else if (debt.status === 'paid') { %>
                            <span class="badge badge-success">Paid</span>
                        <% } else { %>
                            <span class="badge badge-secondary">Cancelled</span>
                        <% } %>
                    </p>
                </div>

                <% if (paymentHistory.length > 0) { %>
                    <h4>Payment History</h4>
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Method</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% paymentHistory.forEach(payment => { %>
                                    <tr>
                                        <td><%= new Date(payment.payment_date).toLocaleDateString() %></td>
                                        <td>$<%= parseFloat(payment.amount || 0).toFixed(2) %></td>
                                        <td><%= payment.payment_method %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>

                <% if (markupLogs.length > 0) { %>
                    <h4>Markup History</h4>
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Debt Before</th>
                                    <th>Markup Applied</th>
                                    <th>Debt After</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% markupLogs.forEach(log => { %>
                                    <tr>
                                        <td><%= new Date(log.calculation_date).toLocaleDateString() %></td>
                                        <td>$<%= parseFloat(log.remaining_debt || 0).toFixed(2) %></td>
                                        <td>
                                            <% if (debt.markup_type === 'fixed') { %>
                                                +$<%= parseFloat(log.markup_value || 0).toFixed(2) %>
                                            <% } else { %>
                                                <%= parseFloat(log.markup_percent || 0).toFixed(2) %>% = $<%= parseFloat(log.markup_value || 0).toFixed(2) %>
                                            <% } %>
                                        </td>
                                        <td>$<%= parseFloat(log.total_after_markup || 0).toFixed(2) %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>

                <% if (debt.status === 'active') { %>
                    <div style="margin-top: 20px;">
                        <form action="/debts/<%= debt.id %>/apply-markup" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-warning" onclick="return confirm('Apply markup to this debt now?')">
                                Apply Markup Manually
                            </button>
                        </form>

                        <form action="/debts/<%= debt.id %>/status" method="POST" style="display: inline;">
                            <input type="hidden" name="status" value="cancelled">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Cancel this debt?')">
                                Cancel Debt
                            </button>
                        </form>
                    </div>
                <% } %>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
