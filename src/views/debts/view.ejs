<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span><%= lang.common.welcome %>, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.debts.debtDetails %></h3>
                    <a href="/debts" class="btn btn-secondary"><%= lang.common.backToList %></a>
                </div>

                <div style="margin-bottom: 20px;">
                    <h4><%= lang.debts.debtInfo %></h4>
                    <p><strong><%= lang.table.id %>:</strong> #<%= debt.id %></p>
                    <p><strong><%= lang.debts.customer %>:</strong> <%= debt.customer_name %> (<%= debt.customer_phone %>)</p>
                    <p><strong><%= lang.debts.sale %>:</strong> <a href="/sales/<%= debt.sale_id %>" class="btn btn-sm btn-primary">Savdoni ko'rish #<%= debt.sale_id %></a></p>
                    <p><strong><%= lang.debts.saleDate %>:</strong> <%= new Date(debt.sale_date).toLocaleDateString('ru-RU') %></p>
                    <p><strong><%= lang.debts.originalAmount %>:</strong> $<%= parseFloat(debt.original_amount || 0).toFixed(2) %></p>
                    <p><strong><%= lang.debts.currentAmount %>:</strong> <span style="color: red; font-size: 1.2em;">$<%= parseFloat(debt.current_amount || 0).toFixed(2) %></span></p>
                    <p><strong><%= lang.debts.markupType %>:</strong>
                        <% if (debt.markup_type === 'fixed') { %>
                            <%= lang.debts.fixed %>: $<%= parseFloat(debt.markup_value || 0).toFixed(2) %> <%= lang.debts.monthly %>
                        <% } else { %>
                            <%= parseFloat(debt.markup_value || 0).toFixed(2) %>% <%= lang.debts.monthly %>
                        <% } %>
                    </p>
                    <p><strong><%= lang.sales.gracePeriod %>:</strong> <%= debt.grace_period_months %> <%= lang.debts.monthly %> (<%= lang.debts.graceEnd %> <%= new Date(debt.grace_end_date).toLocaleDateString('ru-RU') %>)</p>
                    <p><strong><%= lang.debts.lastMarkupDate %>:</strong> <%= debt.last_markup_date ? new Date(debt.last_markup_date).toLocaleDateString('ru-RU') : lang.debts.never %></p>
                    <p><strong><%= lang.common.status %>:</strong>
                        <% if (debt.status === 'active') { %>
                            <span class="badge badge-danger"><%= lang.status.active %></span>
                        <% } else if (debt.status === 'paid') { %>
                            <span class="badge badge-success"><%= lang.status.paid %></span>
                        <% } else { %>
                            <span class="badge badge-secondary"><%= lang.status.cancelled %></span>
                        <% } %>
                    </p>
                </div>

                <% if (paymentHistory.length > 0) { %>
                    <h4><%= lang.sales.paymentHistory %></h4>
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th><%= lang.common.date %></th>
                                    <th><%= lang.sales.amount %></th>
                                    <th><%= lang.sales.method %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% paymentHistory.forEach(payment => { %>
                                    <tr>
                                        <td><%= new Date(payment.payment_date).toLocaleDateString('ru-RU') %></td>
                                        <td>$<%= parseFloat(payment.amount || 0).toFixed(2) %></td>
                                        <td><%= payment.payment_method %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>

                <% if (markupLogs.length > 0) { %>
                    <h4><%= lang.debts.markupHistory %></h4>
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th><%= lang.common.date %></th>
                                    <th><%= lang.debts.debtBefore %></th>
                                    <th><%= lang.debts.markupApplied %></th>
                                    <th><%= lang.debts.debtAfter %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% markupLogs.forEach(log => { %>
                                    <tr>
                                        <td><%= new Date(log.calculation_date).toLocaleDateString('ru-RU') %></td>
                                        <td>$<%= parseFloat(log.remaining_debt || 0).toFixed(2) %></td>
                                        <td>
                                            <% if (debt.markup_type === 'fixed') { %>
                                                +$<%= parseFloat(log.markup_value || 0).toFixed(2) %>
                                            <% } else { %>
                                                <%= parseFloat(log.markup_percent || 0).toFixed(2) %>% = $<%= parseFloat(log.markup_value || 0).toFixed(2) %>
                                            <% } %>
                                        </td>
                                        <td>$<%= parseFloat(log.total_after_markup || 0).toFixed(2) %></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                <% } %>

                <% if (debt.status === 'active') { %>
                    <div style="margin-top: 20px;">
                        <form action="/debts/<%= debt.id %>/apply-markup" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-warning" onclick="return confirm('<%= lang.debts.confirmApplyMarkup %>')">
                                <%= lang.debts.applyMarkupManually %>
                            </button>
                        </form>

                        <form action="/debts/<%= debt.id %>/status" method="POST" style="display: inline;">
                            <input type="hidden" name="status" value="cancelled">
                            <button type="submit" class="btn btn-danger" onclick="return confirm('<%= lang.debts.confirmCancel %>')">
                                <%= lang.debts.cancelDebt %>
                            </button>
                        </form>
                    </div>
                <% } %>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
