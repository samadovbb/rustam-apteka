<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span><%= lang.common.welcome %>, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <!-- Debt Statistics -->
            <div class="stats-grid" style="margin-bottom: 20px;">
                <div class="stat-card">
                    <div class="stat-label"><%= lang.debts.totalActiveDebts %></div>
                    <div class="stat-value"><%= stats.active_count || 0 %></div>
                </div>
                <div class="stat-card danger">
                    <div class="stat-label"><%= lang.debts.totalActiveAmount %></div>
                    <div class="stat-value">$<%= parseFloat(stats.total_active_debt || 0).toFixed(2) %></div>
                </div>
                <div class="stat-card success">
                    <div class="stat-label"><%= lang.debts.totalRecovered %></div>
                    <div class="stat-value">$<%= parseFloat(stats.total_recovered || 0).toFixed(2) %></div>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.debts.debtManagement %></h3>
                    <div>
                        <a href="/debts?status=active" class="btn btn-sm <%= currentStatus === 'active' ? 'btn-primary' : 'btn-secondary' %>"><%= lang.debts.active %></a>
                        <a href="/debts?status=paid" class="btn btn-sm <%= currentStatus === 'paid' ? 'btn-primary' : 'btn-secondary' %>"><%= lang.debts.paid %></a>
                        <a href="/debts?status=cancelled" class="btn btn-sm <%= currentStatus === 'cancelled' ? 'btn-primary' : 'btn-secondary' %>"><%= lang.debts.cancelled %></a>
                    </div>
                </div>

                <div style="padding: 15px;">
                    <input type="text" id="debtsSearch" placeholder="Qidirish..." style="width: 100%; padding: 10px; border: 1px solid #ddd; border-radius: 4px; font-size: 14px;">
                </div>

                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th><%= lang.table.id %></th>
                                <th><%= lang.debts.customer %></th>
                                <th><%= lang.debts.saleDate %></th>
                                <th><%= lang.debts.originalAmount %></th>
                                <th><%= lang.debts.currentAmount %></th>
                                <th><%= lang.debts.markupType %></th>
                                <th><%= lang.debts.graceEnd %></th>
                                <th><%= lang.common.status %></th>
                                <th><%= lang.table.actions %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (debts.length === 0) { %>
                                <tr>
                                    <td colspan="9" class="text-center"><%= currentStatus %> <%= lang.debts.notFound %></td>
                                </tr>
                            <% } else { %>
                                <% debts.forEach(debt => { %>
                                    <tr>
                                        <td>#<%= debt.id %></td>
                                        <td><%= debt.customer_name %><br><small><%= debt.customer_phone %></small></td>
                                        <td><%= new Date(debt.sale_date).toLocaleDateString('ru-RU') %></td>
                                        <td>$<%= parseFloat(debt.original_amount || 0).toFixed(2) %></td>
                                        <td>$<%= parseFloat(debt.current_amount || 0).toFixed(2) %></td>
                                        <td>
                                            <% if (debt.markup_type === 'fixed') { %>
                                                <%= lang.debts.fixed %>: $<%= parseFloat(debt.markup_value || 0).toFixed(2) %>
                                            <% } else { %>
                                                <%= parseFloat(debt.markup_value || 0).toFixed(2) %>%
                                            <% } %>
                                        </td>
                                        <td><%= debt.grace_end_date ? new Date(debt.grace_end_date).toLocaleDateString('ru-RU') : '-' %></td>
                                        <td>
                                            <%
                                            const debtStatus = debt.calculated_status ||
                                                (debt.status === 'cancelled' ? 'cancelled' :
                                                 (debt.current_amount <= 0 ? 'paid' : 'active'));
                                            %>
                                            <% if (debtStatus === 'active') { %>
                                                <span class="badge badge-danger"><%= lang.status.active %></span>
                                            <% } else if (debtStatus === 'paid') { %>
                                                <span class="badge badge-success"><%= lang.status.paid %></span>
                                            <% } else { %>
                                                <span class="badge badge-secondary"><%= lang.status.cancelled %></span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <a href="/debts/<%= debt.id %>" class="btn btn-sm btn-primary"><%= lang.buttons.view %></a>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </main>
</div>

<script>
document.getElementById('debtsSearch').addEventListener('keyup', function() {
    const searchValue = this.value.toLowerCase();
    const tableRows = document.querySelectorAll('.table-responsive tbody tr');

    tableRows.forEach(row => {
        const text = row.textContent.toLowerCase();
        row.style.display = text.includes(searchValue) ? '' : 'none';
    });
});
</script>

<%- include('../partials/footer') %>
