<%- include('partials/header') %>

<div class="main-wrapper">
    <%- include('partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span><%= lang.common.welcome %>, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <!-- Sales Statistics -->
            <div class="stats-grid">
                <div class="stat-card success">
                    <div class="stat-label"><%= lang.dashboard.todaySales %></div>
                    <div class="stat-value">$<%= parseFloat(salesStats.today.total || 0).toFixed(2) %></div>
                    <small><%= salesStats.today.count %> <%= lang.dashboard.transactions %></small>
                </div>

                <div class="stat-card">
                    <div class="stat-label"><%= lang.dashboard.thisWeek %></div>
                    <div class="stat-value">$<%= parseFloat(salesStats.thisWeek.total || 0).toFixed(2) %></div>
                    <small><%= salesStats.thisWeek.count %> <%= lang.dashboard.transactions %></small>
                </div>

                <div class="stat-card warning">
                    <div class="stat-label"><%= lang.dashboard.thisMonth %></div>
                    <div class="stat-value">$<%= parseFloat(salesStats.thisMonth.total || 0).toFixed(2) %></div>
                    <small><%= salesStats.thisMonth.count %> <%= lang.dashboard.transactions %></small>
                </div>

                <div class="stat-card danger">
                    <div class="stat-label"><%= lang.dashboard.activeDebts %></div>
                    <div class="stat-value">$<%= parseFloat(debtStats.total_active_debt || 0).toFixed(2) %></div>
                    <small><%= debtStats.active_count || 0 %> <%= lang.dashboard.customers %></small>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.dashboard.quickActions %></h3>
                </div>
                <div class="d-flex gap-2">
                    <a href="/sales/create" class="btn btn-primary"><%= lang.dashboard.newSale %></a>
                    <a href="/stock-intake/create" class="btn btn-success"><%= lang.dashboard.stockIntake %></a>
                    <a href="/stock-transfer/create" class="btn btn-secondary"><%= lang.dashboard.stockTransfer %></a>
                    <a href="/products/create" class="btn btn-secondary"><%= lang.dashboard.addProduct %></a>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.dashboard.recentSales %></h3>
                    <a href="/sales" class="btn btn-sm btn-primary"><%= lang.table.viewAll %></a>
                </div>
                <div class="table-responsive">
                    <table>
                        <thead>
                            <tr>
                                <th><%= lang.table.id %></th>
                                <th><%= lang.table.date %></th>
                                <th><%= lang.table.customer %></th>
                                <th><%= lang.table.seller %></th>
                                <th><%= lang.table.total %></th>
                                <th><%= lang.table.paid %></th>
                                <th><%= lang.table.status %></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% if (recentSales.length === 0) { %>
                                <tr>
                                    <td colspan="7" class="text-center"><%= lang.dashboard.noSales %></td>
                                </tr>
                            <% } else { %>
                                <% recentSales.forEach(sale => { %>
                                    <tr>
                                        <td>#<%= sale.id %></td>
                                        <td><%= new Date(sale.sale_date).toLocaleDateString('ru-RU') %></td>
                                        <td><%= sale.customer_name %></td>
                                        <td><%= sale.seller_name %></td>
                                        <td>$<%= parseFloat(sale.total_amount || 0).toFixed(2) %></td>
                                        <td>$<%= parseFloat(sale.paid_amount || 0).toFixed(2) %></td>
                                        <td>
                                            <% if (sale.status === 'paid') { %>
                                                <span class="badge badge-success"><%= lang.status.paid %></span>
                                            <% } else if (sale.status === 'partial') { %>
                                                <span class="badge badge-warning"><%= lang.status.partial %></span>
                                            <% } else { %>
                                                <span class="badge badge-danger"><%= lang.status.unpaid %></span>
                                            <% } %>
                                        </td>
                                    </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>

            <% if (lowStockItems.length > 0) { %>
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title"><%= lang.dashboard.lowStockAlert %></h3>
                    </div>
                    <div class="table-responsive">
                        <table>
                            <thead>
                                <tr>
                                    <th><%= lang.table.product %></th>
                                    <th><%= lang.table.barcode %></th>
                                    <th><%= lang.table.quantity %></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% lowStockItems.forEach(item => { %>
                                    <tr>
                                        <td><%= item.product_name %></td>
                                        <td><%= item.barcode %></td>
                                        <td><span class="badge badge-danger"><%= item.quantity %></span></td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% } %>
        </div>
    </main>
</div>

<%- include('partials/footer') %>
