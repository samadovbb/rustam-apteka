<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span>Welcome, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Edit Product</h3>
                    <a href="/products" class="btn btn-secondary">Back to List</a>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>

                <form action="/products/<%= product.id %>" method="POST" data-validate-form>
                    <div class="form-group">
                        <label for="name" class="form-label required">Product Name</label>
                        <input type="text" id="name" name="name" class="form-control" value="<%= product.name %>" data-validate="required" required>
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="barcode" class="form-label required">Barcode</label>
                        <input type="text" id="barcode" name="barcode" class="form-control" value="<%= product.barcode %>" data-validate="required" required>
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="warranty_months" class="form-label">Warranty (months)</label>
                        <input type="number" id="warranty_months" name="warranty_months" class="form-control" value="<%= product.warranty_months %>" data-validate="number|min:0" min="0">
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="purchase_price" class="form-label">Purchase Price</label>
                        <input type="number" step="0.01" id="purchase_price" name="purchase_price" class="form-control" value="<%= product.purchase_price %>" data-validate="positiveNumber|min:0" min="0">
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="sell_price" class="form-label">Sell Price</label>
                        <input type="number" step="0.01" id="sell_price" name="sell_price" class="form-control" value="<%= product.sell_price %>" data-validate="positiveNumber|min:0" min="0">
                        <span class="form-error"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Update Product</button>
                        <a href="/products" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
