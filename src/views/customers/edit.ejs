<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span><%= lang.common.welcome %>, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.customers.editCustomer %></h3>
                    <a href="/customers" class="btn btn-secondary"><%= lang.common.backToList %></a>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>

                <form action="/customers/<%= customer.id %>" method="POST" data-validate-form>
                    <div class="form-group">
                        <label for="full_name" class="form-label required"><%= lang.customers.fullName %></label>
                        <input type="text" id="full_name" name="full_name" class="form-control" value="<%= customer.full_name %>" data-validate="required" required>
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="phone" class="form-label required"><%= lang.customers.phone %></label>
                        <input type="tel" id="phone" name="phone" class="form-control" value="<%= customer.phone %>" data-validate="required|phone" required>
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="address" class="form-label"><%= lang.customers.address %></label>
                        <textarea id="address" name="address" class="form-control" rows="3"><%= customer.address || '' %></textarea>
                        <span class="form-error"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary"><%= lang.buttons.update %></button>
                        <a href="/customers" class="btn btn-secondary"><%= lang.buttons.cancel %></a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
