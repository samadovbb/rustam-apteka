<%- include('../partials/header') %>

<div class="main-wrapper">
    <%- include('../partials/sidebar') %>

    <main class="main-content">
        <div class="topbar">
            <h2><%= title %></h2>
            <div class="user-info">
                <span><%= lang.common.welcome %>, <strong><%= locals.user ? user.full_name || user.login : 'Admin' %></strong></span>
            </div>
        </div>

        <div class="container">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title"><%= lang.suppliers.addNew %></h3>
                    <a href="/suppliers" class="btn btn-secondary"><%= lang.buttons.backToList %></a>
                </div>

                <% if (error) { %>
                    <div class="alert alert-danger"><%= error %></div>
                <% } %>

                <form action="/suppliers" method="POST" data-validate-form>
                    <div class="form-group">
                        <label for="name" class="form-label required"><%= lang.suppliers.supplierName %></label>
                        <input type="text" id="name" name="name" class="form-control" data-validate="required" required>
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="phone" class="form-label"><%= lang.suppliers.phone %></label>
                        <input type="tel" id="phone" name="phone" class="form-control" data-validate="phone" placeholder="+998901234567">
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="email" class="form-label"><%= lang.suppliers.email %></label>
                        <input type="email" id="email" name="email" class="form-control" data-validate="email" placeholder="supplier@example.com">
                        <span class="form-error"></span>
                    </div>

                    <div class="form-group">
                        <label for="address" class="form-label"><%= lang.suppliers.address %></label>
                        <textarea id="address" name="address" class="form-control" rows="3"></textarea>
                        <span class="form-error"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary"><%= lang.buttons.save %></button>
                        <a href="/suppliers" class="btn btn-secondary"><%= lang.buttons.cancel %></a>
                    </div>
                </form>
            </div>
        </div>
    </main>
</div>

<%- include('../partials/footer') %>
